<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="@dimen/y10">

    <View
        android:id="@+id/va"
        android:layout_width="0dp"
        android:layout_height="@dimen/y10"
        android:background="#EFEFEF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></View>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/clyt_top"
        android:layout_width="0dp"
        android:layout_height="@dimen/y45"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/va">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y10"
            android:text="50ETF沽7月2950"
            android:textColor="#433F3E"
            android:textSize="@dimen/x16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/y3"
            android:text="买开"
            android:textColor="#ED5D67"
            android:textSize="@dimen/x13"
            app:layout_constraintLeft_toRightOf="@+id/tv_name"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:layout_width="@dimen/x23"
            android:layout_height="@dimen/y23"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/selector_check"
            android:button="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>


    <View
        android:id="@+id/v1"
        android:layout_width="0dp"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x10"
        android:background="#F5F5F5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clyt_top"></View>

    <LinearLayout
        android:id="@+id/llyt_1"
        android:layout_width="0dp"
        android:layout_height="@dimen/y66"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x10"
        android:paddingTop="@dimen/y5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clyt_top">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_chengbenjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0.453/"
                    android:textColor="#3E413D"
                    android:textSize="@dimen/x14" />

                <TextView
                    android:id="@+id/tv_xianjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0.453"
                    android:textColor="#5EC271"
                    android:textSize="@dimen/x14"
                    app:layout_constraintLeft_toRightOf="@+id/tv_chengbenjia"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="成本价/现价"
                android:textColor="#3E413D"
                android:textSize="@dimen/x14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_chengbenjia" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_chicang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#3E413D"
                    android:textSize="@dimen/x14" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="持仓"
                android:textColor="#3E413D"
                android:textSize="@dimen/x14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_chengbenjia" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_keyong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#3E413D"
                    android:textSize="@dimen/x14" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="可用"
                android:textColor="#3E413D"
                android:textSize="@dimen/x14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_chengbenjia" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/v2"
        android:layout_width="0dp"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x10"
        android:background="#F5F5F5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llyt_1"></View>

    <LinearLayout
        android:id="@+id/llyt_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x10"
        android:paddingTop="@dimen/y5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v2">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_chengben"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0.453/"
                    android:textColor="#3E413D"
                    android:textSize="@dimen/x14" />

                <TextView
                    android:id="@+id/tv_shizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0.453"
                    android:textColor="#5EC271"
                    android:textSize="@dimen/x14"
                    app:layout_constraintLeft_toRightOf="@+id/tv_chengbenjia"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="成本/市值"
                android:textColor="#3E413D"
                android:textSize="@dimen/x14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_chengbenjia" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_yingkui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#3E413D"
                    android:textSize="@dimen/x14" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="盈亏"
                android:textColor="#3E413D"
                android:textSize="@dimen/x14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_chengbenjia" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_baifenbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#3E413D"
                    android:textSize="@dimen/x14" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:text="百分比"
                android:textColor="#3E413D"
                android:textSize="@dimen/x14"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_chengbenjia" />
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>